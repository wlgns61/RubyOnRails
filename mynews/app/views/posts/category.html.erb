<div class="row">
    <div class="col s5 m2">
        <div class="collection">
            <a href="<%= posts_category_path(:item => "All") %>" class="collection-item">All</a>
            <a href="<%= posts_category_path(:item => "Sports") %>" class="collection-item">Sports</a>
            <a href="<%= posts_category_path(:item => "Life") %>" class="collection-item">Life</a>
            <a href="<%= posts_category_path(:item => "Social") %>" class="collection-item">Social</a>
            <a href="<%= posts_category_path(:item => "Technology") %>" class="collection-item">Technology</a>
            <a href="<%= posts_category_path(:item => "Else") %>" class="collection-item">Else</a>
        </div>
    </div>
    <ul class="collection with-header">
        <li class="collection-header"><h4><%= @category %></h4></li>
        <% @posts.each do |post| %> 
            <% if post.image.url %>
                <img src="<%= post.image.url%>" , class="newsimg"/>     
            <% else %>
                <img src="http://materializecss.com/images/office.jpg", class="newsimg"/>
            <% end %>
            
            <a href = "<%= posts_content_path(:id => post.id) %>", class= "collection-item", style="color: #424242; height: 90px;" >
                <%= longtitle(post.title, 40)%></br>
                <div class="timetxt"><%= post.created_at %></div>
                <div class="contenttxt"><%= longtitle(post.content, 45)%></div>
            </a>
        <% end %>
    </ul>
</div>
